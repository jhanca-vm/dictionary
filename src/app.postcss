@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply bg-[#050505] px-6 text-white transition-colors duration-300 
      md:px-10;
  }

  label {
    @apply cursor-pointer;
  }

  input {
    @apply bg-transparent;
  }

  input[type='search']::-webkit-search-cancel-button {
    @apply hidden;
  }
}
