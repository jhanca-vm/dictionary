@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply px-6 text-[#2d2d2d] transition-colors duration-300 dark:bg-[#050505]
      dark:text-white md:px-10;
  }

  label {
    @apply cursor-pointer;
  }

  input {
    @apply bg-transparent;
  }

  input[type="search"]::-webkit-search-cancel-button {
    @apply hidden;
  }
}
